
<h1>Bus Routes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_routes.each do |bus_route| %>
      <tr>
        <td><%= bus_route.name %></td>
        <td><%= bus_route.number %></td>
        <td><%= link_to 'Show', bus_route %></td>
        <td>
        <% if can? :edit, BusRoute %>
          <%= link_to 'Edit', edit_bus_route_path(bus_route) %>
        <% end %>
        </td>

        <td>
        <% if can? :destroy, BusRoute %>
          <%= link_to 'Destroy', bus_route, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :edit, BusRoute %>
  <%= link_to 'New Bus route', new_bus_route_path %>
<% end %>