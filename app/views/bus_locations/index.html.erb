<p id="notice"><%= notice %></p>

<h1>Listing Bus Locations</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Bus route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_locations.each do |bus_location| %>
      <tr>
        <td><%= bus_location.latitude %></td>
        <td><%= bus_location.longitude %></td>
        <td><%= bus_location.bus_route.name %></td>
        <td><%= link_to 'Show', bus_location %></td>
        <td><%= link_to 'Edit', edit_bus_location_path(bus_location) %></td>
        <td><%= link_to 'Destroy', bus_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

